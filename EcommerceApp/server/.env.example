# Example environment variables for the server
# Copy this file to `.env` and replace placeholder values with real secrets

# MongoDB connection string (MongoDB Atlas)
MONGO_URI=mongodb+srv://<DB_USER>:<DB_PASSWORD>@<CLUSTER_HOST>/<DEFAULT_DB>?retryWrites=true&w=majority

# Server port
PORT=5000

# NODE_ENV can be 'development' or 'production'
NODE_ENV=development
